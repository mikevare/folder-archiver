{
	"name": "folder-archiver",
	"displayName": "Folder Archiver",
	"description": "Archives any folder in the workspace",
	"version": "0.0.1",
	"publisher": "pdamianik",
	"engines": {
		"vscode": "^1.45.0"
	},
	"license": "SEE LICENSE IN LICENSE",
	"categories": [
		"Other"
	],
	"keywords": [
		"archive",
		"zip",
		"compress"
	],
	"preview": true,
	"activationEvents": [
		"onCommand:folder-archiver.archive"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "folder-archiver.archive",
				"title": "Archive"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "folder-archiver.archive",
					"group": "2_workspace"
				}
			]
		},
		"configuration": {
			"title": "Folder Archiver",
			"properties": {
				"folder-archiver.maxArchiveThreadCount": {
					"type": "integer",
					"default": 5,
					"description": "The maximum amount of parallel archiving process that can run at once"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"jszip": "^3.4.0"
	}
}
